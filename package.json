{
    "name": "diablo2-loot-filter-hint",
    "displayName": "Diablo 2 Loot Filter Hints",
    "description": "Diablo 2 LoD loot filter langauge (based on BH Maphack) and hints extension by tmcerny",
    "version": "1.0.0",
    "license": "GPL-3.0",
    "publisher": "tmcerny",
    "author": "tmcerny",
    "main": "./extension/main",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
	"scripts": {},
	"extensionDependencies": [],
	"dependencies": {},
	"devDependencies": {
		"vscode": "^1.1.37"
	},
    "engines": {
        "vscode": "^1.50.0"
    },
    "activationEvents": [
		"onLanguage:podlootfilter",
		"onLanguage:pd2lootfilter"
	],
    "contributes": {
        "languages": [
            {
                "id": "podlootfilter",
                "extensions": [
                    ".filter"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "pd2lootfilter",
                "extensions": [
                    ".filter"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "podlootfilter",
                "scopeName": "source.podlootfilter",
                "path": "./syntaxes/podlootfilter.tmGrammar.json"
            },
            {
                "language": "pd2lootfilter",
                "scopeName": "source.pd2lootfilter",
                "path": "./syntaxes/pd2lootfilter.tmGrammar.json"
            }
        ],
        "snippets": [
            {
                "language": "podlootfilter",
                "path": "./data/snippets.json"
            },
            {
                "language": "pd2lootfilter",
                "path": "./data/snippets.json"
            }
        ]
    },
    "repository": {
		"type": "git",
		"url": "https://github.com/tommyc90/vscode-diablo2-loot-filter-hint"
	}
}